<body>
  <header>
    <h1>Explore Products</h1>
    <div class="controls">
      <div class="filter-group">
        <button class="filter-btn active" data-category="all">All</button>
        <button class="filter-btn" data-category="electronics">Electronics</button>
        <button class="filter-btn" data-category="clothing">Clothing</button>
        <button class="filter-btn" data-category="accessories">Accessories</button>
      </div>
      <div class="sort-group">
        <label for="sort">Sort by:</label>
        <select id="sort">
          <option value="default">Default</option>
          <option value="price-asc">Price: Low to High</option>
          <option value="price-desc">Price: High to Low</option>
          <option value="rating-desc">Rating: High to Low</option>
        </select>
      </div>
    </div>
  </header>

  <main>
    <div class="product-container" id="product-list"></div>
  </main>

  <script>
    const products = [

  {
    id: 1,
    name: "Wireless Headphones",
    category: "electronics",
    price: 1999,
    rating: 4.3,
    image: "https://picsum.photos/id/180/300/180"
  },
  {
    id: 2,
    name: "Men's Jacket",
    category: "clothing",
    price: 2999,
    rating: 4.7,
    image: "https://picsum.photos/id/1062/300/180"
  },
  {
    id: 3,
    name: "Smart Watch",
    category: "electronics",
    price: 3499,
    rating: 4.6,
    image: "https://picsum.photos/id/1/300/180"
  },
  {
    id: 4,
    name: "Ladies Handbag",
    category: "accessories",
    price: 899,
    rating: 4.1,
    image: "https://picsum.photos/id/103/300/180"
  },
  {
    id: 5,
    name: "Bluetooth Speaker",
    category: "electronics",
    price: 1299,
    rating: 4.4,
    image: "https://picsum.photos/id/1080/300/180"
  },
  {
    id: 6,
    name: "Denim Jeans",
    category: "clothing",
    price: 1799,
    rating: 4.0,
    image: "https://picsum.photos/id/238/300/180"
  }
];



    const productList = document.getElementById("product-list");
    const filterButtons = document.querySelectorAll(".filter-btn");
    const sortSelect = document.getElementById("sort");

    let currentCategory = "all";
    let currentSort = "default";

    function displayProducts(items) {
      productList.innerHTML = "";

      items.forEach((product) => {
        productList.innerHTML += `
          <div class="product-card">
            <img src="${product.image}" alt="${product.name}" />
            <div class="product-info">
              <h3>${product.name}</h3>
              <p class="price">₹${product.price}</p>
              <p class="rating">⭐ ${product.rating}</p>
            </div>
          </div>
        `;
      });
    }

    function applyFilters() {
      let filtered = [...products];

      if (currentCategory !== "all") {
        filtered = filtered.filter(p => p.category === currentCategory);
      }

      switch (currentSort) {
        case "price-asc":
          filtered.sort((a, b) => a.price - b.price);
          break;
        case "price-desc":
          filtered.sort((a, b) => b.price - a.price);
          break;
        case "rating-desc":
          filtered.sort((a, b) => b.rating - a.rating);
          break;
      }

      displayProducts(filtered);
    }

    filterButtons.forEach(btn => {
      btn.addEventListener("click", () => {
        filterButtons.forEach(b => b.classList.remove("active"));
        btn.classList.add("active");
        currentCategory = btn.dataset.category;
        applyFilters();
      });
    });

    sortSelect.addEventListener("change", (e) => {
      currentSort = e.target.value;
      applyFilters();
    });

    displayProducts(products);
  </script>
</body>
